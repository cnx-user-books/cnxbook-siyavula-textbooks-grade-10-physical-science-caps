                    </m:mfenced>
                  </m:mtd>
                </m:mtr>
                <m:mtr>
                  <m:mtd/>
                  <m:mtd>
                    <m:mo>=</m:mo>
                  </m:mtd>
                  <m:mtd columnalign="left">
                    <m:mfenced separators="" open="(" close=")">
                      <m:mfrac>
                        <m:mn>1</m:mn>
                        <m:mrow>
                          <m:mn>10</m:mn>
                          <m:mspace width="0.166667em"/>
                          <m:mi>Ω</m:mi>
                        </m:mrow>
                      </m:mfrac>
                      <m:mo>+</m:mo>
