                <m:mtr>
                  <m:mtd columnalign="right">
                    <m:mrow>
                      <m:mo>∴</m:mo>
                      <m:mspace width="1.em"/>
                      <m:msub>
                        <m:mi>R</m:mi>
                        <m:mi>p</m:mi>
                      </m:msub>
