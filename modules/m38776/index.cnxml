<m:mn>1</m:mn><m:mrow>
                <m:msub>
                  <m:mi>R</m:mi>
                  <m:mn>2</m:mn>
                </m:msub></m:mrow>
</m:mfrac>
                    </m:mrow>
                  </m:mtd>
                </m:mtr>
