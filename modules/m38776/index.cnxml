                      <m:mi>Ω</m:mi></m:mrow></m:mfrac>
                    </m:mrow>
                  </m:mtd>
                </m:mtr>
<m:mtr>
<m:mtd columnalign="right"><m:msub><m:mi>R</m:mi><m:mi>p</m:mi></m:msub></m:mtd>
<m:mtd>
                    <m:mo>=</m:mo>
                  </m:mtd>
<m:mtd columnalign="left"><m:mfrac><m:mn>2</m:mn><m:mn>8</m:mn></m:mfrac></m:mtd>
</m:mtr>
                <m:mtr>


                  <m:mtd/>
